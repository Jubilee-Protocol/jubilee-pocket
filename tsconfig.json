{
    "compilerOptions": {
        "typeRoots": [
            "./node_modules/@types"
        ],
        "lib": [
            "es2015"
        ],
        "module": "commonjs",
        "target": "es6",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist"
    },
    "include": [
        "tests/**/*",
        "scripts/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}